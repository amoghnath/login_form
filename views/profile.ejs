<!doctype html>
<html>

<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/css/foundation.min.css" integrity="sha256-ogmFxjqiTMnZhxCqVmcqTvjfe1Y/ec4WaRj/aQPvn+I=" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/foundation-sites@6.6.3/dist/js/foundation.min.js" integrity="sha256-pRF3zifJRA9jXGv++b06qwtSqX1byFQOLjqa2PTEb2o=" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Georama:wght@200;400&display=swap" rel="stylesheet">
    <style>
        body 		{ padding-top:80px; word-wrap:break-word; 
        			font-family: 'Georama', sans-serif;}
    </style>
</head>

<body>
    <div class="container">

        <div class="page-header text-center">
            <img src="https://img.icons8.com/office/80/000000/gender-neutral-user.png" />
            <h3>Profile Page</h3>
            <a href="/logout" class="alert button">Logout</a>
        </div>

        <div class="callout secondary text-center">
            <h3><img src="https://img.icons8.com/wired/64/000000/administrator-male.png"/></h3>

            <% if (user.local.email) { %>
                <p>
                    <strong>ID</strong>:
                    <%= user._id %><br>
                        <strong>Email</strong>:
                        <%= user.local.email %><br>
                </p>

                <% } else { %>
                    <a href="/connect/local" class="button">Connect Local</a>
                    <% } %>
<hr>
                        <h3><img src="https://img.icons8.com/dotty/80/000000/facebook.png" /></h3>

                        <% if (user.facebook.token) { %>
                            <p>
                                <strong>ID</strong>:
                                <%= user.facebook.id %><br>
                                    <strong>Email</strong>:
                                    <%= user.facebook.email %><br>
                                        <strong>Name</strong>:
                                        <%= user.facebook.name %><br>
                            </p>

                            <% } else { %>
                                <a href="/connect/facebook" class="button">Connect Facebook</a>
                                <% } %>
<hr>
                                    <h3><img src="https://img.icons8.com/dotty/80/000000/github.png" /></h3>

                                    <% if (user.github.token) { %>
                                        <p>
                                            <strong>ID</strong>:
                                            <%= user.github.id %><br>
                                                <strong>Username</strong>:
                                                <%= user.github.username %>
                                        </p>

                                        <% } else { %>
                                            <a href="/connect/github" class="button">Connect github</a>
                                            <% } %>
											<hr>
                                                <h3><img src="https://img.icons8.com/dotty/80/000000/google-logo.png" /></h3>

                                                <% if (user.google.token) { %>
                                                    <p>
                                                        <strong>ID :</strong>
                                                        <%= user.google.id %><br>
                                                            <strong>Email :</strong>
                                                            <%= user.google.email %><br>
                                                                <strong>Name :</strong>
                                                                <%= user.google.name %>
                                                    </p>

                                                    <% } else { %>
                                                        <a href="/connect/google" class="button">Connect Google</a>
                                                        <% } %>
        </div>
    </div>
</body>

</html>